{% extends 'ClarolineCoreBundle::mockup/dashboard/dashboard-tool.html.twig' %}

{% block panelTitle %}Edition d'une vue{% endblock %}

{% block panelRest %}

<div class="panel-body">
    <div id="conteneur" class="container-fluid">
        <div class="row">
            <main class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
                <article>
                    <p>Nom de la vue: <input type="text" placeholder=" Nom de la vue"></p>
                    <div class="form">
                        <label for="sel1">Filtres :</label>
                        <select class="form-control" id="sel1">
                            <option>Utilisateurs</option>
                            <option>Espaces d'activités</option>
                            <option>Ressources</option>
                            <option>Période</option>
                            <option>Forums</option>
                            <option>Exercices</option>
                            <option>Parcours</option>
                            <option>Activités</option>
                            <option>Collecticiels</option>
                            <option>Pages wikis</option>
                            <option>Blogs</option>
                            <option>Annonces</option>
                            <option>Sondages</option>
                            <option>Wikis</option>
                            <option>Chats</option>
                            <option>etc...</option>
                        </select>
                    </div>
                </article>
            </main>
            <aside class="col-xs-12 col-sm-12 col-md-9 col-lg-9">
            </aside>
        </div>
    </div>
</div>
