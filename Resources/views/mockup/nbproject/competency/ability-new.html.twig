{% extends "HeVinciMockupBundle::mockup/competency/frame-view-2.html.twig" %}

{% block modal %}
    {% embed "HeVinciMockupBundle::library/claroline/modal.html.twig" %}
        {% block title %}Créer une capacité{% endblock %}
        {% block body %}
            <form action="#" method="POST">
                <div>
                    <div class="form-group row">
                        <label class="control-label col-md-3 required" for="competence_form_name">
                            Nom
                        </label>
                        <div class="col-md-9">
                            <input type="text"
                                   value="Nommer un genre"
                                   required="required"
                                   class="form-control"
                                    />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="control-label col-md-3 required" for="competence_form_score">
                            Position sur l'échelle
                        </label>
                        <div class="col-md-9">
                            <select class="form-control">
                                <option>A1</option>
                                <option>A2</option>
                                <option>B1</option>
                                <option>B2</option>
                                <option selected>C1</option>
                                <option>C2</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="control-label col-md-3 required" for="competence_form_name">
                            Nombre d'activités à réussir
                        </label>
                        <div class="col-md-9">
                            <input type="number"
                                   value="3"
                                   required="required"
                                   class="form-control"
                                    />
                        </div>
                    </div>
                </div>
            </form>
        {% endblock %}
    {% endembed %}
{% endblock %}