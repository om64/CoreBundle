{% if config.getParameter('theme') is defined and asset_exists('themes/' ~ config.getParameter('theme') ~ '/bootstrap.css') %}
    {# from theme #}
    {% set themeCSS = asset('') ~ 'themes/' ~ config.getParameter('theme') ~ '/bootstrap.css' %}
{% else %}
    {# default #}
    {% set themeCSS = asset('') ~ 'themes/' ~ 'claroline' ~ '/bootstrap.css' %}
{% endif %}

<link rel="stylesheet" href="{{ themeCSS }}" media="screen" />
<link rel='stylesheet' type='text/css' href='{{ asset('bundles/frontend/font-awesome/css/font-awesome.min.css') }}'/>
